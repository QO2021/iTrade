# iportfolio.com Configuration File
# Copy this file to .env and fill in your actual API keys

# Flask Configuration
SECRET_KEY=your-secret-key-here-use-random-string
DATABASE_URL=sqlite:///iportfolio.db

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Financial Data APIs
FRED_API_KEY=your-fred-api-key-from-https://fred.stlouisfed.org/docs/api/api_key.html
NEWS_API_KEY=your-news-api-key-from-https://newsapi.org

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-from-https://platform.openai.com

# Optional: Database URL for production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost/iportfolio

# Development/Production Mode
FLASK_ENV=development
FLASK_DEBUG=True