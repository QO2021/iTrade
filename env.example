# Server Configuration
PORT=5000
NODE_ENV=development

# Flask Secret Key
SECRET_KEY=your-secret-key-here

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/itrade

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for password reset and registration)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# OpenAI API (for news analysis)
OPENAI_API_KEY=your-openai-api-key

# Yahoo Finance API (optional, using yahoo-finance2 package)
YAHOO_FINANCE_API_KEY=your-yahoo-api-key

# Federal Reserve Economic Data (FRED) API
FRED_API_KEY=your-fred-api-key

# News API (for financial news)
NEWS_API_KEY=your-news-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 