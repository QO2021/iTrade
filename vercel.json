{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "FLASK_APP": "index.py",
    "PYTHONPATH": "."
  },
  "functions": {
    "index.py": {
      "maxDuration": 30
    }
  }
} 